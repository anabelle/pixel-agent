{
  "name": "pixel-agent",
  "version": "1.0.0",
  "type": "module",
  "description": "Pixel - A witty, survival-driven AI agent for LNPixels, championing collaborative pixel art with humor and heart",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:character": "bun scripts/build-character.ts",
    "dev": "bun ./node_modules/@elizaos/cli/dist/index.js dev",
    "start": "bun run build:character && bun ./node_modules/@elizaos/cli/dist/index.js start --character ./character.json --port 3003",
    "start:patched": "./start-with-twitter-patch.sh",
    "test": "bun ./node_modules/@elizaos/cli/dist/index.js test",
    "test:plugin-nostr": "cd plugin-nostr && npm test",
    "test:diary": "bun test src/diary/__tests__/diary-service.test.ts",
    "test:twitter": "bun test src/__tests__/twitter-plugin.test.ts",
    "diary": "bun src/diary/cli.ts",
    "clean-db": "./clean-db.sh",
    "prepare": "husky"
  },
  "trustedDependencies": [
    "sharp",
    "onnxruntime-node",
    "@elizaos/plugin-telegram",
    "@elizaos/plugin-twitter"
  ],
  "overrides": {
    "openai": "4.77.0"
  },
  "dependencies": {
    "@elizaos/adapter-postgres": "0.1.9",
    "@elizaos/core": "1.6.2",
    "@elizaos/plugin-bootstrap": "1.6.2",
    "@elizaos/plugin-discord": "1.3.3",
    "@elizaos/plugin-knowledge": "1.6.1",
    "@elizaos/plugin-openai": "1.6.0",
    "@elizaos/plugin-openrouter": "1.5.17",
    "@elizaos/plugin-sql": "1.6.2",
    "@elizaos/plugin-telegram": "1.6.2",
    "@elizaos/plugin-twitter": "1.2.22",
    "@noble/hashes": "^2.0.0",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^16.3.1",
    "node-fetch": "^2.7.0",
    "nostr-tools": "^2.19.4",
    "onnxruntime-node": "^1.17.0",
    "openai": "4.77.0",
    "pixel-plugin-nostr": "file:./plugin-nostr",
    "pg": "^8.11.3",
    "express": "^4.18.2",
    "sharp": "^0.34.5",
    "telegram": "^2.26.8",
    "whatwg-url": "^7.1.0",
    "ws": "^8.18.0",
    "@elizaos/cli": "1.7.0",
    "@types/express": "^4.17.21"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pg": "^8.11.0",
    "bun-types": "^1.3.5",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "elizaos",
    "ai-agent",
    "pixel-art",
    "lightning-network",
    "survival-ai"
  ],
  "author": "Pixel",
  "license": "MIT"
}
