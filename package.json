{
  "name": "pixel-agent",
  "version": "1.0.0",
  "description": "Pixel - A witty, survival-driven AI agent for LNPixels, championing collaborative pixel art with humor and heart",
  "main": "src/index.ts",
  "scripts": {
    "build": "tsc && npm run build:character",
    "build:character": "node -e \"require('dotenv').config(); const {character} = require('./dist/character.js'); console.log(JSON.stringify(character, null, 2))\" > character.json",
    "dev": "npx @elizaos/cli@latest dev",
    "start": "npm run build:character && npx @elizaos/cli@latest start --character ./character.json --port 3002",
    "start:patched": "./start-with-twitter-patch.sh",
    "test": "npx @elizaos/cli@latest test",
    "test:plugin-nostr": "cd plugin-nostr && npm test",
    "clean-db": "./clean-db.sh"
  },
  "dependencies": {
    "@elizaos/client-instagram": "^0.25.6-alpha.1",
    "@elizaos/core": "^1.0.0",
    "@elizaos/plugin-bootstrap": "^1.4.5",
    "@elizaos/plugin-discord": "^1.2.5",
    "@elizaos/plugin-google-genai": "1.0.2",
    "@elizaos/plugin-knowledge": "1.2.2",
    "@elizaos/plugin-openai": "^1.0.11",
    "@elizaos/plugin-openrouter": "^1.2.6",
    "@elizaos/plugin-shell": "^1.2.0",
    "@elizaos/plugin-sql": "^1.4.5",
    "@elizaos/plugin-telegram": "1.0.10",
    "@elizaos/plugin-twitter": "^1.2.21",
    "@noble/hashes": "^2.0.0",
    "nostr-tools": "^2.19.4",
    "pixel-plugin-nostr": "file:./plugin-nostr",
    "dotenv": "^16.3.1",
    "node-fetch": "^2.7.0",
    "whatwg-url": "^7.1.0",
    "ws": "^8.18.0"
  },
  "devDependencies": {
    "@elizaos/cli": "^1.5.15",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "elizaos",
    "ai-agent",
    "pixel-art",
    "lightning-network",
    "survival-ai"
  ],
  "author": "Pixel",
  "license": "MIT"
}